

<div class="container">
	<h2>
		Create coupon
	</h2>

<form mehtod="post" action="/coupons/create" class="form-inline" role="form">

	<div class="form-group">
		<label for="type">Coupon type</label>
		<select class="form-control" id="type">
			<option>USD $</option>
			<option>% off</option>
		</select>
	</div>
    <div class="form-group">
      <label for="value">value:</label>
      <input type="value" class="form-control" id="value" placeholder="Enter value">
    </div>

	<div class="form-group">
		<label for="applied_on">Applied on (orders)</label>
		<select class="form-control" id="applied_on">
			<option>All orders</option>
			<option>next order</option>
		</select>
	</div>

    <button type="submit" class="btn btn-default">Submit</button>
  </form>

</div>